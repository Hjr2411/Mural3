<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Teste Firebase</title>
</head>
<body>
  <h1>Teste de Conexão com Firebase</h1>
  <pre id="output">Carregando...</pre>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/12.0.0/firebase-app.js";
    import { getDatabase, ref, get } from "https://www.gstatic.com/firebasejs/12.0.0/firebase-database.js";

    // Configuração do seu Firebase
    const firebaseConfig = {
      apiKey: "AIzaSyCVYvTFM3yoMta2T5AX_3FewmhtkvE9SOA",
      authDomain: "muralhsys.firebaseapp.com",
      databaseURL: "https://muralhsys-default-rtdb.firebaseio.com",
      projectId: "muralhsys",
      storageBucket: "muralhsys.firebasestorage.app",
      messagingSenderId: "652168528324",
      appId: "1:652168528324:web:741aa4779c1f7a149c6491",
      measurementId: "G-FMKBG2M0PE"
    };

    // Inicializa Firebase
    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);

    const output = document.getElementById("output");

    // Lê o nó usuarios
    get(ref(db, "usuarios")).then((snap) => {
      if (snap.exists()) {
        output.textContent = JSON.stringify(snap.val(), null, 2);
      } else {
        output.textContent = "Nenhum usuário encontrado.";
      }
    }).catch((err) => {
      output.textContent = "Erro: " + err.message;
      console.error(err);
    });
  </script>
</body>
</html>
